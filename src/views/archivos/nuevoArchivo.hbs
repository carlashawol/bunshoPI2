{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo Archivo</h3>
        </div>
        <div class="card-body">
            <form action="/archivos/nuevoArchivo" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Título" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="idArchivo" class="form-control" placeholder="Identificación del archivo"
                        autofocus>
                </div>
                <!--<div class="form-group">
                    <input type="text" name="ubicacion" class="form-control" placeholder="Ubicación del archivo"
                        autofocus>
                </div>-->
                <div>
                    <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
                </div>
                <br>
                <br/>
                Archivo Digital: <br/>
                <input type="file" name="digital" id="digital" />
                <div class="form-group mt-4">
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="estado" id="true" value="Disponible" checked>
                            Disponible
                        </label>
                    </div>
                    <div class="radio-inline">
                        <label>
                            <input type="radio" name="estado" id="false" value="No Disponible">
                            No Disponible
                        </label>
                    </div>
                </div>
                <p></p>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>